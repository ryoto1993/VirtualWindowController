<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="jp.ac.doshisha.projectn.virtualwindowcontroller.ThumbsActivity"
        android:background="@drawable/sky_back4">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/doshishaText" android:layout_weight="1"
            android:textColor="@color/buttonWhite" android:textSize="24sp" android:textAlignment="textStart"
            android:text="@string/text_doshisha" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>

    <Button android:layout_width="wrap_content" android:layout_height="0dp"
            android:id="@+id/button_home" android:text="@string/btn_back"
            android:background="@drawable/ripple_button"
            android:drawableStart="@drawable/home"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/doshishaText"
            app:layout_constraintBottom_toBottomOf="@id/doshishaText"
            android:textColor="@color/buttonWhite" android:onClick="buttonOnClick"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/doshishaText"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp">
        <RelativeLayout
                android:id="@+id/buttonArea"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
        </RelativeLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
