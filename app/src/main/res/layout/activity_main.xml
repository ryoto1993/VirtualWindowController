<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="jp.ac.doshisha.projectn.virtualwindowcontroller.MainActivity"
        android:background="@drawable/cork_back">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <Button
                    android:text="@string/btn_live"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button_live" android:layout_weight="1"
                    android:textSize="@dimen/btn_textSize"
                    android:background="@drawable/main_button" android:layout_margin="8dp"
                    style="@android:style/Widget.Button" android:onClick="buttonOnClick"/>
            <Button
                    android:text="@string/btn_blank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button_blank"
                    android:textSize="@dimen/btn_textSize"
                    android:background="@drawable/main_button" android:layout_margin="8dp" android:layout_weight="1"
                    style="@android:style/Widget.Button" android:onClick="buttonOnClick"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <Button
                    android:text="@string/btn_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button_image" android:layout_weight="1"
                    android:textSize="@dimen/btn_textSize"
                    android:background="@drawable/main_button" android:layout_margin="8dp"
                    style="@android:style/Widget.Button" android:onClick="buttonOnClick"/>
            <Button
                    android:text="@string/btn_video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button_video" android:layout_weight="1"
                    android:textSize="@dimen/btn_textSize"
                    android:background="@drawable/main_button" android:layout_margin="8dp"
                    style="@android:style/Widget.Button" android:onClick="buttonOnClick"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
